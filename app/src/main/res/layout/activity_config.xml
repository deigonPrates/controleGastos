<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutConfig"
    tools:context="com.example.deigon.concroledegastos2.Config">

    <ImageButton
        android:id="@+id/imageButtonVoltar"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginTop="9dp"
        android:layout_weight="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar"
        tools:layout_editor_absoluteX="6dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/radioGroupCor"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/idTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/imageButtonVoltar"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
            android:id="@+id/btnSalvarCor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="155dp"
            android:layout_marginStart="78dp"
            android:text="Salvar"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="318dp" />

        <RadioGroup
            android:id="@+id/radioGroupCor"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/btnSalvarCor"
            android:layout_alignStart="@+id/btnSalvarCor"
            android:layout_marginBottom="63dp">

            <RadioButton
                android:id="@+id/Azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Azul"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/Verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verde"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/Laranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laranja"
                android:textSize="24sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha uma cor"
            android:textSize="30sp"
            android:layout_above="@+id/radioGroupCor"
            android:layout_alignEnd="@+id/radioGroupCor"
            android:layout_marginBottom="24dp" />

</RelativeLayout>
